{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "module": "ES2020",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "removeComments": false,
        "noImplicitOverride": true,
        "sourceMap": true,
        "noLib": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": "src"
    },
    "include": ["./src/**/*.ts"]
}
